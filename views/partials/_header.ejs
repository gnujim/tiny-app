<!-- views/partials/_header.ejs -->

<h1>TINYAPP</h1>

<% if (username) { %>
  <form method="POST" action="/logout">
    <!-- label for logout?? username displayed seperate? -->
    <label for="username"><%= username %>  </label>
    <div class="button">
      <button type="submit">Logout</button>
    </div>
  </form>
  <% } else { %>
    <form method="POST" action="/login">
      <label for="username">Sign in: </label>
      <input id="username" type="text" name="username" placeholder="username" style="width: 200px">
      <input type="submit" value="Submit">
    </form>
    <% } %>


      <!-- if (username), display username and a seperate logout form
  which will post to /logout. Otherwise, show login form. -->